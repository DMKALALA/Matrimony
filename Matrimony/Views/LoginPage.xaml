<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Matrimony.Views.LoginPage"
    Title="Login">

    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Email" Text="{Binding Email}" Margin="10" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" Margin="10" />
        <Button Text="Login" Command="{Binding LoginCommand}" Margin="20" />
        <Button Text="Sign Up" Clicked="OnSignUpClicked" Margin="20" />
        <Button Text="I'm a guest" Clicked="guestButton_Clicked" x:Name="guestButton" Margin="20" />
    </VerticalStackLayout>
</ContentPage>
