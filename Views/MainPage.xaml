<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Matrimony.MainPage"
             Title="Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="{Binding Greeting}"
                   FontSize="26"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <Button Text="Guest List"
                    Command="{Binding GoToGuestListCommand}" />

            <Button Text="Itinerary"
                    Command="{Binding GoToItineraryCommand}" />

            <Button Text="Catering"
                    Command="{Binding GoToCateringCommand}" />

            <Button Text="Logout"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="Red"
                    TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
